<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:orientation="vertical">




                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_no_network"
                            />
                        <TextView
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivBanner"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Oops!"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            style="@style/text_12_shades"
                            android:layout_gravity="center"
                            android:text="No internet connection found."
                            android:textSize="@dimen/_16sdp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:text="Check your connection"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp">

                        <Button
                            android:id="@+id/btnNoNetwork"
                            android:layout_width="0dp"
                            style="@style/text_12_black_1"
                            android:background="@drawable/login_error_button"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:textColor="@color/whiteOpacity"
                            android:text="Try again" />
                    </LinearLayout>


                </LinearLayout>





        </RelativeLayout>


</RelativeLayout>