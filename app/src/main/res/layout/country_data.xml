<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		
		android:layout_marginBottom="@dimen/_11sdp">
		
		<androidx.cardview.widget.CardView
			android:id="@+id/cVCountry"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="@dimen/_10sdp">
			<!--						app:cardBackgroundColor="#fff2df">-->
			
			<RelativeLayout
				android:id="@+id/rlTitle"
				android:layout_width="@dimen/_250sdp"
				android:layout_height="@dimen/_65sdp">
				
				<ImageView
					android:id="@+id/img"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_centerVertical="true"
					android:layout_gravity="start"
					android:layout_marginStart="@dimen/_10sdp"
					android:layout_marginTop="@dimen/_10sdp"
					android:layout_marginEnd="@dimen/_10sdp"
					android:layout_marginBottom="@dimen/_10sdp"
					android:contentDescription="@string/app_name"
					android:src="@drawable/circle_grammar" />
				
				<ImageView
					android:id="@+id/ivCountry"
					android:layout_width="@dimen/_25sdp"
					android:layout_height="@dimen/_25sdp"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/_18sdp"
					android:layout_marginEnd="@dimen/_15sdp"
					android:contentDescription="@string/app_name"
					android:src="@drawable/ic_baseline_menu_book_24" />
				
				
				<TextView
					android:id="@+id/tvTitleName"
					style="@style/grammar_dashboard_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|center_horizontal"
					android:layout_marginTop="20dp"
					android:layout_toEndOf="@+id/img"
					android:text="" />
				
				<TextView
					android:id="@+id/countryInfo"
					style="@style/text_dashboard_subject_subtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tvTitleName"
					android:layout_toEndOf="@+id/img"
					android:text=""
					android:textColor="@color/lightcolorOrange" />
			</RelativeLayout>
			
		</androidx.cardview.widget.CardView>
		
	
	</RelativeLayout>
</LinearLayout>